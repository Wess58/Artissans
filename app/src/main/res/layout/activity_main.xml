<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/lightorange"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/aboutTextView"
        android:layout_marginTop="27dp"
        android:text="Welcome to Artissans App"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@color/orange"
        android:lineSpacingExtra="8sp"
        android:text="@string/About"
        android:textSize="22sp"
        tools:layout_marginLeft="20dp"
        tools:padding="30dp" />

    <Button
        android:id="@+id/loginMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/signUpMain"
        android:layout_marginStart="66dp"
        android:text="LOGIN"
        android:textStyle="bold"
        tools:background="@color/bluegreen"
        tools:padding="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_alignTop="@+id/loginMain"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/art" />

    <Button
        android:id="@+id/signUpMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="77dp"
        android:background="@color/bluegreen"
        android:text="SignUp"
        android:textStyle="bold"
        tools:padding="10dp" />

</RelativeLayout>