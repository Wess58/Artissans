<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckgrndl"
    android:layout_gravity="center"
    tools:context=".ui.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/art"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/SinguptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="Sign Up"

        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        />



    <EditText
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/edittextstyle"
        android:padding="10sp"
        android:drawableRight="@drawable/smiley"
        android:drawableTint="#000"
        android:ems="12"
        android:hint="Firstname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/edittextstyle"
        android:padding="10sp"
        android:drawableRight="@drawable/smiley"
        android:drawableTint="#000"
        android:ems="12"
        android:hint="Lastname"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/edittextstyle"
        android:padding="10sp"
        android:drawableRight="@drawable/email"
        android:drawableTint="#000"
        android:ems="12"
        android:textCursorDrawable="@color/bluegreen"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/edittextstyle"
        android:padding="10sp"
        android:drawableRight="@drawable/contact"
        android:drawableTint="#000"
        android:ems="12"
        android:hint="Phone"
        android:inputType="phone" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#000"
        app:hintEnabled="false"
        >

        <EditText
            android:id="@+id/Passord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edittextstyle"
            android:padding="10sp"
            android:drawableTint="#000"
            android:ems="12"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/black"

            />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secured"
        android:layout_gravity="center"
        android:textSize="10sp"
        />


    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/buttonsstyle"
        android:textColor="#000"
        android:text="Submit"
        tools:padding="5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/trianglebutton"
            android:scaleType="fitCenter"
            android:background=" "
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:rotation="180"
            android:src="@drawable/trianglebutton"
            android:scaleType="fitCenter"
            android:background=" "
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:rotation="30"
            android:src="@drawable/trianglebutton"
            android:scaleType="fitCenter"
            android:background=" "
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:rotation="90"
            android:src="@drawable/trianglebutton"
            android:scaleType="fitCenter"
            android:background=" "
            android:layout_weight="1"
            />



    </LinearLayout>


    <TextView
        android:id="@+id/emailConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textSize="16sp"
        android:text="@string/confirmation"
         />

</LinearLayout>