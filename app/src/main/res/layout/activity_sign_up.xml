<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckgrndl"
    android:layout_gravity="center"
    tools:context=".ui.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/art"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/SinguptextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        />



    <EditText
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/bluegreen"
        android:drawableRight="@drawable/smiley"
        android:ems="10"
        android:textCursorDrawable="@color/bluegreen"
        android:hint="firstname"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/bluegreen"
        android:drawableRight="@drawable/smiley"
        android:ems="10"
        android:textCursorDrawable="@color/bluegreen"
        android:hint="Lastname"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/bluegreen"
        android:drawableRight="@drawable/email"
        android:ems="10"
        android:textCursorDrawable="@color/bluegreen"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/bluegreen"
        android:drawableRight="@drawable/contact"
        android:ems="10"
        android:textCursorDrawable="@color/bluegreen"
        android:hint="phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/Passord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:drawableEnd="@drawable/notvisible"
        android:ems="10"
        android:hint="Password"
        android:textCursorDrawable="@color/bluegreen"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/bluegreen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secured"
        android:layout_gravity="center"
        android:textSize="10sp"
        />


    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@color/bluegreen"
        android:backgroundTint="@color/bluegreen"
        android:text="Submit"
        tools:padding="5sp" />

    <TextView
        android:id="@+id/emailConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textSize="16sp"
        android:text="@string/confirmation"
         />

</LinearLayout>