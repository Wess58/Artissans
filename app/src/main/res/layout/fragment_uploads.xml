<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:orientation="vertical"
    tools:context=".fragments.UploadsFragment">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/projo1"
            android:scaleType="fitCenter"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Couple Portrait, \n Using Graphite/Charcoal"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ksh 3000"
                    android:textColor="@color/bluegreen"
                    />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/projo2"
            android:layout_marginBottom="10sp"
            android:scaleType="fitCenter"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Celebrating Life, \n Using Graphite/Charcoal"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ksh 2500"
                    android:textColor="@color/bluegreen"
                    />
        </LinearLayout>



</LinearLayout>